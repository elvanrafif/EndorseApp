<%- include('./partials/head') %>

    <p>See how is this chart went</p>
    <canvas id="myChart" width="25px" height="10px"></canvas>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <!-- <script src="./node_modules/chart.js/dist/Chart.min.js"></script> -->
    
    <script>
        var ctx = document.getElementById('myChart');
        var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: <%- JSON.stringify(label) %>,
                    datasets: [{
                        label: '# of Product',
                        data: <%- JSON.stringify(dataNum) %>,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
    </script>
